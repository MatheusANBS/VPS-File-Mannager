<ui:FluentWindow x:Class="VPSFileManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:VPSFileManager.ViewModels"
        mc:Ignorable="d"
        Title="VPS File Manager" 
        Height="850" Width="1200"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="None"
        Background="{DynamicResource ApplicationBackgroundBrush}"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.InputBindings>
        <KeyBinding Key="R" Modifiers="Ctrl" Command="{Binding RefreshDirectoryCommand}"/>
        <KeyBinding Key="U" Modifiers="Ctrl" Command="{Binding UploadFilesCommand}"/>
        <KeyBinding Key="D" Modifiers="Ctrl" Command="{Binding DownloadFileCommand}"/>
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding CreateFolderCommand}"/>
        <KeyBinding Key="Delete" Command="{Binding DeleteSelectedCommand}"/>
        <KeyBinding Key="F2" Command="{Binding RenameSelectedCommand}"/>
        <KeyBinding Key="H" Modifiers="Ctrl" Command="{Binding GoHomeCommand}"/>
        <KeyBinding Key="Back" Command="{Binding GoUpCommand}"/>
        <KeyBinding Key="Left" Modifiers="Alt" Command="{Binding GoBackCommand}"/>
        <KeyBinding Key="Right" Modifiers="Alt" Command="{Binding GoForwardCommand}"/>
        <KeyBinding Key="F" Modifiers="Ctrl" Command="{Binding OpenAdvancedSearchCommand}"/>
        <KeyBinding Key="A" Modifiers="Ctrl" Command="{Binding SelectAllCommand}"/>
        <KeyBinding Key="L" Modifiers="Ctrl" Command="{Binding StartEditPathCommand}"/>
    </Window.InputBindings>

    <Window.Resources>
        <!-- Storyboard para animações de fade-in -->
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation 
                Storyboard.TargetProperty="Opacity"
                From="0" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <Storyboard x:Key="SlideInStoryboard">
            <DoubleAnimation 
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                From="20" To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation 
                Storyboard.TargetProperty="Opacity"
                From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TitleBar & Global Actions -->
        <ui:TitleBar Title="VPS File Manager" Grid.Row="0"/>

        <!-- Main Content Root -->
        <Grid Grid.Row="1">
            
            <!-- CONNECTION LAYER (Dialog overlay) -->
            <Grid x:Name="ConnectionDialog" 
                  Visibility="{Binding ShowConnectionDialog, Converter={StaticResource BooleanToVisibilityConverter}}"
                  Panel.ZIndex="100"
                  Background="#0D0D0D">

                <!-- Subtle background pattern -->
                <Border Opacity="0.03">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#0078D4" Offset="0"/>
                            <GradientStop Color="#00B4D8" Offset="0.5"/>
                            <GradientStop Color="#0078D4" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <Grid MaxWidth="960" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="260"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ════════ Saved Connections Sidebar ════════ -->
                    <Border Background="#161616" 
                            CornerRadius="16,0,0,16" 
                            BorderBrush="#2A2A2A" 
                            BorderThickness="1,1,0,1">
                        <Grid Margin="16,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Sidebar Header -->
                            <Border Margin="0,0,0,16" Padding="10,8" CornerRadius="8" Background="#1A1A1A">
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="History24" FontSize="16" Foreground="#0078D4"/>
                                    <TextBlock Text="Recent Connections" FontSize="12" FontWeight="SemiBold" 
                                               Margin="8,0,0,0" VerticalAlignment="Center" Foreground="#AAAAAA"/>
                                </StackPanel>
                            </Border>

                            <!-- Connections List -->
                            <ListBox Grid.Row="1"
                                     ItemsSource="{Binding SavedConnections}"
                                     SelectedItem="{Binding SelectedSavedConnection}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     MouseDoubleClick="SavedConnections_MouseDoubleClick">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0,0,0,2"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border x:Name="Bd" Background="Transparent" 
                                                            CornerRadius="8" Padding="10,8">
                                                        <ContentPresenter/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Bd" Property="Background" Value="#1AFFFFFF"/>
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="Bd" Property="Background" Value="#200078D4"/>
                                                            <Setter TargetName="Bd" Property="BorderBrush" Value="#400078D4"/>
                                                            <Setter TargetName="Bd" Property="BorderThickness" Value="1"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Width="32" Height="32" CornerRadius="6" Background="#1E1E1E" 
                                                    VerticalAlignment="Center" Margin="0,0,10,0">
                                                <ui:SymbolIcon Symbol="Desktop24" FontSize="14" Foreground="#0078D4" 
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" FontWeight="Medium" FontSize="12" 
                                                           Foreground="#E0E0E0"/>
                                                <TextBlock Text="{Binding Host}" FontSize="10" Foreground="#666666" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!-- Empty state -->
                            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                        Visibility="{Binding SavedConnections.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                                <ui:SymbolIcon Symbol="PlugDisconnected24" FontSize="32" Foreground="#333333" HorizontalAlignment="Center"/>
                                <TextBlock Text="No saved connections" FontSize="11" Foreground="#444444" 
                                           HorizontalAlignment="Center" Margin="0,8,0,0"/>
                            </StackPanel>

                            <!-- Remove button -->
                            <ui:Button Grid.Row="2" 
                                       Command="{Binding DeleteSavedConnectionCommand}"
                                       Icon="{ui:SymbolIcon Delete24}"
                                       Content="Remove"
                                       Appearance="Transparent"
                                       HorizontalAlignment="Stretch"
                                       Margin="0,12,0,0"
                                       Padding="8,6"/>
                        </Grid>
                    </Border>

                    <!-- ════════ Connection Form ════════ -->
                    <Border Grid.Column="1" 
                            Background="#191919" 
                            CornerRadius="0,16,16,0"
                            BorderBrush="#2A2A2A" 
                            BorderThickness="0,1,1,1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Margin="40,32">
                            <StackPanel>
                                <!-- Hero header -->
                                <StackPanel HorizontalAlignment="Left" Margin="0,0,0,32">
                                    <Border Width="48" Height="48" CornerRadius="12" Background="#1A0078D4" 
                                            HorizontalAlignment="Left" Margin="0,0,0,16">
                                        <ui:SymbolIcon Symbol="PlugConnected24" FontSize="22" Foreground="#0078D4" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Connect to Server" FontSize="22" FontWeight="Bold" Foreground="#F0F0F0"/>
                                    <TextBlock Text="Enter your VPS credentials to establish an SFTP connection" 
                                               FontSize="12" Foreground="#777777" Margin="0,6,0,0"/>
                                </StackPanel>

                                <!-- Connection name -->
                                <StackPanel Margin="0,0,0,18">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                        <ui:SymbolIcon Symbol="Tag24" FontSize="14" Foreground="#888888" Margin="0,0,6,0"/>
                                        <TextBlock Text="Connection Name" FontSize="11" Foreground="#999999" FontWeight="Medium"/>
                                    </StackPanel>
                                    <ui:TextBox PlaceholderText="My Server" 
                                                Text="{Binding ConnectionName, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>

                                <!-- Host & Port row -->
                                <Grid Margin="0,0,0,18">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Margin="0,0,10,0">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                            <ui:SymbolIcon Symbol="Globe24" FontSize="14" Foreground="#888888" Margin="0,0,6,0"/>
                                            <TextBlock Text="Host" FontSize="11" Foreground="#999999" FontWeight="Medium"/>
                                        </StackPanel>
                                        <ui:TextBox PlaceholderText="192.168.1.1 or domain.com" 
                                                    Text="{Binding ConnectionInfo.Host, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                            <ui:SymbolIcon Symbol="NumberRow24" FontSize="14" Foreground="#888888" Margin="0,0,6,0"/>
                                            <TextBlock Text="Port" FontSize="11" Foreground="#999999" FontWeight="Medium"/>
                                        </StackPanel>
                                        <ui:TextBox Text="{Binding ConnectionInfo.Port, UpdateSourceTrigger=PropertyChanged}" 
                                                    PlaceholderText="22"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Username & Password row -->
                                <Grid Margin="0,0,0,18">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Margin="0,0,10,0">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                            <ui:SymbolIcon Symbol="Person24" FontSize="14" Foreground="#888888" Margin="0,0,6,0"/>
                                            <TextBlock Text="Username" FontSize="11" Foreground="#999999" FontWeight="Medium"/>
                                        </StackPanel>
                                        <ui:TextBox PlaceholderText="root" 
                                                    Text="{Binding ConnectionInfo.Username, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                            <ui:SymbolIcon Symbol="Key24" FontSize="14" Foreground="#888888" Margin="0,0,6,0"/>
                                            <TextBlock Text="Password" FontSize="11" Foreground="#999999" FontWeight="Medium"/>
                                        </StackPanel>
                                        <ui:PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Separator -->
                                <Border Height="1" Background="#222222" Margin="0,4,0,16"/>

                                <!-- Options row -->
                                <Grid Margin="0,0,0,28">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Padding="12,8" CornerRadius="8" Background="#141414">
                                        <CheckBox Content="Save credentials" IsChecked="{Binding SaveCredentials}"/>
                                    </Border>
                                    <Border Grid.Column="1" Padding="12,8" CornerRadius="8" Background="#141414" Margin="8,0,0,0">
                                        <CheckBox Content="Auto-connect" IsChecked="{Binding AutoConnect}"/>
                                    </Border>
                                </Grid>

                                <!-- Connect Button -->
                                <ui:Button Content="Connect"
                                           Command="{Binding ConnectCommand}"
                                           Appearance="Primary"
                                           Height="44"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Stretch"
                                           Icon="{ui:SymbolIcon PlugConnected24}"/>

                                <!-- Loading -->
                                <ui:ProgressRing IsIndeterminate="True"
                                                 Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                 Margin="0,16,0,0"/>
                            </StackPanel>
                        </Grid>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>

            <!-- BROWSER LAYER -->
            <Grid Visibility="{Binding ShowConnectionDialog, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="SidebarColumn" Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- NAVIGATION SIDEBAR -->
                <Border Background="#111111" 
                        BorderBrush="#1E1E1E" 
                        BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- ═══ CONNECTION HEADER (Expanded) ═══ -->
                        <Border x:Name="SidebarHeaderExpanded" Padding="16,14,16,12" BorderBrush="#1E1E1E" BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Width="34" Height="34" CornerRadius="8" Background="#1A0078D4" 
                                        VerticalAlignment="Center" Margin="0,0,10,0">
                                    <ui:SymbolIcon Symbol="Desktop24" FontSize="16" Foreground="#0078D4"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" x:Name="SidebarLabels">
                                    <TextBlock Text="{Binding ConnectionInfo.DisplayName}" 
                                               FontWeight="SemiBold" FontSize="13" Foreground="#E0E0E0" 
                                               TextTrimming="CharacterEllipsis"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                        <Ellipse Width="6" Height="6" Fill="#10B981" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock Text="Connected" FontSize="10" Foreground="#555555"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Collapse toggle -->
                                <ui:Button Grid.Column="2" x:Name="SidebarToggleBtn"
                                           Icon="{ui:SymbolIcon PanelLeftContract24}" 
                                           Appearance="Transparent" Padding="4" 
                                           Click="ToggleSidebar_Click"
                                           ToolTip="Collapse sidebar"
                                           Opacity="0.4" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- ═══ CONNECTION HEADER (Collapsed) ═══ -->
                        <Border x:Name="SidebarHeaderCollapsed" Padding="0,10" 
                                BorderBrush="#1E1E1E" BorderThickness="0,0,0,1"
                                Visibility="Collapsed">
                            <ui:Button x:Name="SidebarExpandBtn"
                                       Icon="{ui:SymbolIcon PanelLeftExpand24}" 
                                       Appearance="Transparent" Padding="6" 
                                       Click="ToggleSidebar_Click"
                                       ToolTip="Expand sidebar"
                                       Opacity="0.5" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <!-- ═══ FILE ACTIONS ═══ -->
                        <StackPanel Grid.Row="1" Margin="12,12,12,0" x:Name="SidebarFileActions">
                            <TextBlock Text="F I L E   A C T I O N S" FontSize="9" FontWeight="Bold" 
                                       Foreground="#444444" Margin="6,0,0,8"/>
                            <ui:Button Content="Upload" 
                                       Icon="{ui:SymbolIcon ArrowUpload24}" 
                                       Command="{Binding UploadFilesCommand}" 
                                       Appearance="Transparent" 
                                       HorizontalAlignment="Stretch" 
                                       HorizontalContentAlignment="Left" 
                                       Margin="0,0,0,2" Padding="10,7"/>
                            <ui:Button Content="Download" 
                                       Icon="{ui:SymbolIcon ArrowDownload24}" 
                                       Command="{Binding DownloadFileCommand}" 
                                       Appearance="Transparent" 
                                       HorizontalAlignment="Stretch" 
                                       HorizontalContentAlignment="Left" 
                                       Margin="0,0,0,2" Padding="10,7"/>
                            <ui:Button Content="New Folder" 
                                       Icon="{ui:SymbolIcon FolderAdd24}" 
                                       Command="{Binding CreateFolderCommand}" 
                                       Appearance="Transparent" 
                                       HorizontalAlignment="Stretch" 
                                       HorizontalContentAlignment="Left" 
                                       Padding="10,7"/>
                        </StackPanel>

                        <!-- ═══ FAVORITES + TOOLS (scrollable middle) ═══ -->
                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0">
                            <StackPanel x:Name="SidebarMiddle">

                                <!-- Separator -->
                                <Border Height="1" Background="#1A1A1A" Margin="16,4,16,8"/>

                                <!-- FAVORITES Section -->
                                <StackPanel Margin="12,0,12,0">
                                    <Grid Margin="0,0,0,6">
                                    <TextBlock Text="F A V O R I T E S" FontSize="9" FontWeight="Bold" 
                                               Foreground="#444444" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                        <ui:Button HorizontalAlignment="Right" 
                                                   Icon="{ui:SymbolIcon StarAdd24}" 
                                                   Command="{Binding AddCurrentToFavoritesCommand}" 
                                                   Appearance="Transparent" Padding="4" 
                                                   ToolTip="Bookmark current folder"
                                                   Opacity="0.5"/>
                                    </Grid>
                                    
                                    <ItemsControl ItemsSource="{Binding FavoritePaths}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <ui:Button Content="{Binding}" 
                                                               Appearance="Transparent" 
                                                               HorizontalAlignment="Stretch" 
                                                               HorizontalContentAlignment="Left"
                                                               Command="{Binding DataContext.NavigateToFavoriteCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                               CommandParameter="{Binding}"
                                                               FontSize="11" Padding="8,5">
                                                        <ui:Button.Icon>
                                                            <ui:SymbolIcon Symbol="Folder24" FontSize="12" Opacity="0.5"/>
                                                        </ui:Button.Icon>
                                                    </ui:Button>
                                                    <ui:Button Grid.Column="1" Icon="{ui:SymbolIcon Dismiss16}"
                                                               Command="{Binding DataContext.RemoveFavoriteCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                               CommandParameter="{Binding}"
                                                               Appearance="Transparent" Padding="3" Opacity="0.2"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Empty state -->
                                    <TextBlock Text="No bookmarks yet" FontSize="10" Foreground="#333333" 
                                               Margin="6,4,0,0"
                                               Visibility="{Binding FavoritePaths.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                                </StackPanel>

                                <!-- Separator -->
                                <Border Height="1" Background="#1A1A1A" Margin="16,10,16,8"/>

                                <!-- TOOLS Section -->
                                <StackPanel Margin="12,0,12,0">
                                    <TextBlock Text="T O O L S" FontSize="9" FontWeight="Bold" 
                                               Foreground="#444444" Margin="6,0,0,8"/>
                                    
                                    <ui:Button Content="Tasks" 
                                               Icon="{ui:SymbolIcon Play24}" 
                                               Command="{Binding OpenTasksWindowCommand}" 
                                               Appearance="Transparent" 
                                               HorizontalAlignment="Stretch" 
                                               HorizontalContentAlignment="Left" 
                                               Margin="0,0,0,2" Padding="10,7">
                                        <ui:Button.Style>
                                            <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                                <Setter Property="Background" Value="#161616"/>
                                            </Style>
                                        </ui:Button.Style>
                                    </ui:Button>

                                    <ui:Button Content="Terminal" 
                                               Icon="{ui:SymbolIcon WindowConsole20}" 
                                               Command="{Binding OpenTerminalWindowCommand}" 
                                               Appearance="Transparent" 
                                               HorizontalAlignment="Stretch" 
                                               HorizontalContentAlignment="Left" 
                                               Margin="0,0,0,2" Padding="10,7">
                                        <ui:Button.Style>
                                            <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                                <Setter Property="Background" Value="#161616"/>
                                            </Style>
                                        </ui:Button.Style>
                                    </ui:Button>

                                    <ui:Button Content="Dashboard" 
                                               Icon="{ui:SymbolIcon Gauge24}" 
                                               Command="{Binding OpenDashboardWindowCommand}" 
                                               Appearance="Transparent" 
                                               HorizontalAlignment="Stretch" 
                                               HorizontalContentAlignment="Left" 
                                               Padding="10,7">
                                        <ui:Button.Style>
                                            <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                                <Setter Property="Background" Value="#161616"/>
                                            </Style>
                                        </ui:Button.Style>
                                    </ui:Button>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- ═══ COLLAPSED ICON STRIP ═══ -->
                        <StackPanel Grid.Row="2" x:Name="SidebarCollapsedIcons" 
                                    Visibility="Collapsed"
                                    HorizontalAlignment="Center" Margin="0,8,0,0">
                            <ui:Button Icon="{ui:SymbolIcon ArrowUpload24}" 
                                       Command="{Binding UploadFilesCommand}" 
                                       Appearance="Transparent" Padding="8" Margin="0,2"
                                       ToolTip="Upload" HorizontalAlignment="Center" Opacity="0.6"/>
                            <ui:Button Icon="{ui:SymbolIcon ArrowDownload24}" 
                                       Command="{Binding DownloadFileCommand}" 
                                       Appearance="Transparent" Padding="8" Margin="0,2"
                                       ToolTip="Download" HorizontalAlignment="Center" Opacity="0.6"/>
                            <ui:Button Icon="{ui:SymbolIcon FolderAdd24}" 
                                       Command="{Binding CreateFolderCommand}" 
                                       Appearance="Transparent" Padding="8" Margin="0,2"
                                       ToolTip="New Folder" HorizontalAlignment="Center" Opacity="0.6"/>
                            
                            <Border Height="1" Background="#1A1A1A" Margin="4,6" Width="28"/>
                            
                            <ui:Button Icon="{ui:SymbolIcon Play24}" 
                                       Command="{Binding OpenTasksWindowCommand}" 
                                       Appearance="Transparent" Padding="8" Margin="0,2"
                                       ToolTip="Tasks" HorizontalAlignment="Center" Opacity="0.6"/>
                            <ui:Button Icon="{ui:SymbolIcon WindowConsole20}" 
                                       Command="{Binding OpenTerminalWindowCommand}" 
                                       Appearance="Transparent" Padding="8" Margin="0,2"
                                       ToolTip="Terminal" HorizontalAlignment="Center" Opacity="0.6"/>
                            <ui:Button Icon="{ui:SymbolIcon Gauge24}" 
                                       Command="{Binding OpenDashboardWindowCommand}" 
                                       Appearance="Transparent" Padding="8" Margin="0,2"
                                       ToolTip="Dashboard" HorizontalAlignment="Center" Opacity="0.6"/>
                        </StackPanel>

                        <!-- ═══ FOOTER ═══ -->
                        <Border Grid.Row="3" Height="1" Background="#1A1A1A" Margin="16,0"/>

                        <StackPanel Grid.Row="4" Margin="12,8,12,12" x:Name="SidebarFooter">
                            <ui:Button Content="Shortcuts" 
                                       Icon="{ui:SymbolIcon Keyboard24}" 
                                       Command="{Binding ShowHelpCommand}" 
                                       Appearance="Transparent" 
                                       HorizontalAlignment="Stretch" 
                                       HorizontalContentAlignment="Left"
                                       Foreground="#555555"
                                       Padding="10,6" Margin="0,0,0,2"/>
                            <ui:Button Content="Disconnect" 
                                       Icon="{ui:SymbolIcon PlugDisconnected24}" 
                                       Command="{Binding DisconnectCommand}" 
                                       Appearance="Transparent" 
                                       HorizontalAlignment="Stretch"
                                       HorizontalContentAlignment="Left"
                                       Foreground="#EF4444"
                                       Padding="10,6"/>
                        </StackPanel>

                        <!-- ═══ COLLAPSED FOOTER ═══ -->
                        <StackPanel Grid.Row="4" x:Name="SidebarCollapsedFooter" 
                                    Visibility="Collapsed"
                                    HorizontalAlignment="Center" Margin="0,8,0,12">
                            <ui:Button Icon="{ui:SymbolIcon Keyboard24}" 
                                       Command="{Binding ShowHelpCommand}" 
                                       Appearance="Transparent" Padding="8" Margin="0,2"
                                       ToolTip="Shortcuts" HorizontalAlignment="Center" 
                                       Opacity="0.4"/>
                            <ui:Button Icon="{ui:SymbolIcon PlugDisconnected24}" 
                                       Command="{Binding DisconnectCommand}" 
                                       Appearance="Transparent" Padding="8" Margin="0,2"
                                       ToolTip="Disconnect" HorizontalAlignment="Center"
                                       Foreground="#EF4444"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- MAIN WORKSPACE -->
                <Grid Grid.Column="1" 
                      Background="{DynamicResource ApplicationBackgroundBrush}"
                      AllowDrop="True"
                      Drop="FileBrowser_Drop"
                      DragOver="FileBrowser_DragOver"
                      DragLeave="FileBrowser_DragLeave">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Status Banner -->
                    <ui:InfoBar Title="{Binding InfoBarTitle}" Message="{Binding InfoBarMessage}" IsOpen="{Binding ShowInfoBar}" Severity="{Binding InfoBarSeverity}" Margin="16,12,16,0"/>

                    <!-- NAVIGATION BAR -->
                    <Border Grid.Row="1" Padding="16,12" Background="{DynamicResource ApplicationBackgroundBrush}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal">
                                <ui:Button Icon="{ui:SymbolIcon ArrowLeft24}" Command="{Binding GoBackCommand}" Appearance="Transparent" Margin="0,0,4,0"/>
                                <ui:Button Icon="{ui:SymbolIcon ArrowUp24}" Command="{Binding GoUpCommand}" Appearance="Transparent" Margin="0,0,4,0"/>
                                <ui:Button Icon="{ui:SymbolIcon ArrowSync24}" Command="{Binding RefreshDirectoryCommand}" Appearance="Transparent"/>
                            </StackPanel>

                            <Border Grid.Column="1" Margin="12,0" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="6" Padding="4">
                                <Grid>
                                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Visibility="{Binding IsEditingPath, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                        <ItemsControl ItemsSource="{Binding BreadcrumbItems}">
                                            <ItemsControl.ItemsPanel><ItemsPanelTemplate><StackPanel Orientation="Horizontal"/></ItemsPanelTemplate></ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <ui:Button Content="{Binding Name}" Command="{Binding DataContext.NavigateToBreadcrumbCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding Path}" Appearance="Transparent" Padding="8,4" FontSize="13"/>
                                                        <ui:SymbolIcon Symbol="ChevronRight20" FontSize="12" Opacity="0.3" VerticalAlignment="Center" Visibility="{Binding IsLast, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                    <ui:TextBox Text="{Binding EditablePath, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding IsEditingPath, Converter={StaticResource BooleanToVisibilityConverter}}" x:Name="PathEditBox" KeyDown="PathEditBox_KeyDown" BorderThickness="0"/>
                                </Grid>
                            </Border>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <ui:Button Icon="{ui:SymbolIcon Search24}" Command="{Binding OpenAdvancedSearchCommand}" Appearance="Transparent" ToolTip="Advanced Search (Ctrl+F)"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- FILE LISTING GRID -->
                    <Grid Grid.Row="2">
                        
                        <!-- List Headers -->
                        <Border VerticalAlignment="Top" Panel.ZIndex="5" Background="{DynamicResource ApplicationBackgroundBrush}" BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" BorderThickness="0,1" Padding="16,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="1" Text="Name" FontSize="11" FontWeight="Bold" Opacity="0.5"/>
                                <TextBlock Grid.Column="2" Text="Size" FontSize="11" FontWeight="Bold" Opacity="0.5"/>
                                <TextBlock Grid.Column="3" Text="Modified" FontSize="11" FontWeight="Bold" Opacity="0.5"/>
                            </Grid>
                        </Border>

                        <!-- Items -->
                        <ListBox x:Name="FileListBox"
                                 ItemsSource="{Binding Files}"
                                 SelectedItem="{Binding SelectedFile}"
                                 SelectionMode="Extended"
                                 SelectionChanged="FileListBox_SelectionChanged"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Margin="0,35,0,0">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="16,2"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <EventSetter Event="MouseDoubleClick" Handler="FileItem_DoubleClick"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource SelectionBackgroundBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Height="36" Cursor="Hand" Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="150"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Grid.ContextMenu>
                                            <ContextMenu>
                                                <ui:MenuItem Header="Open" Icon="{ui:SymbolIcon Open24}" 
                                                           Click="ContextMenu_Open_Click"
                                                           CommandParameter="{Binding}"/>
                                                <ui:MenuItem Header="Edit" Icon="{ui:SymbolIcon Edit24}" 
                                                           Click="ContextMenu_Edit_Click"
                                                           CommandParameter="{Binding}"/>
                                                <Separator/>
                                                <ui:MenuItem Header="Download" Icon="{ui:SymbolIcon ArrowDownload24}" 
                                                           Click="ContextMenu_Download_Click"
                                                           CommandParameter="{Binding}"/>
                                                <ui:MenuItem Header="Rename" Icon="{ui:SymbolIcon Rename24}" 
                                                           Click="ContextMenu_Rename_Click"
                                                           CommandParameter="{Binding}"/>
                                                <ui:MenuItem Header="Delete" Icon="{ui:SymbolIcon Delete24}" 
                                                           Click="ContextMenu_Delete_Click"
                                                           CommandParameter="{Binding}"/>
                                            </ContextMenu>
                                        </Grid.ContextMenu>

                                        <ui:SymbolIcon Symbol="{Binding Icon}" Foreground="{Binding IconColor}" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center" FontSize="13" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Grid.Column="2" Text="{Binding FormattedSize}" VerticalAlignment="Center" FontSize="12" Opacity="0.5"/>
                                        <TextBlock Grid.Column="3" Text="{Binding FormattedDate}" VerticalAlignment="Center" FontSize="12" Opacity="0.5"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Empty/Loading States -->
                        <ui:ProgressRing IsIndeterminate="True" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <StackPanel Grid.Row="1" VerticalAlignment="Center" Visibility="{Binding IsEmptyDirectory, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ui:SymbolIcon Symbol="Folder24" FontSize="48" Opacity="0.1" HorizontalAlignment="Center"/>
                            <TextBlock Text="Empty directory" Opacity="0.2" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        </StackPanel>

                        <!-- Drop Overlay -->
                        <Border x:Name="DragDropOverlay" Visibility="Collapsed" Background="{DynamicResource ApplicationBackgroundBrush}" Opacity="0.9" BorderBrush="{DynamicResource SystemAccentColorPrimaryBrush}" BorderThickness="2" CornerRadius="8" Margin="10">
                            <StackPanel VerticalAlignment="Center">
                                <ui:SymbolIcon Symbol="ArrowUpload24" FontSize="48" Foreground="{DynamicResource SystemAccentColorPrimaryBrush}"/>
                                <TextBlock Text="Drop to upload" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- FOOTER STATUS -->
                    <Border Grid.Row="3" Padding="16,8" Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" BorderThickness="0,1,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding StatusMessage}" FontSize="11" Opacity="0.7" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" Visibility="{Binding IsUploading, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="20,0,0,0">
                                    <ui:ProgressRing Progress="{Binding UploadProgress}" IsIndeterminate="False" Width="16" Height="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding UploadProgress, StringFormat='{}{0:F0}%'}" FontSize="11" FontWeight="Bold" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            <TextBlock Grid.Column="1" Text="{Binding Files.Count, StringFormat='{}{0} items'}" FontSize="11" Opacity="0.5" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>

                <ui:SnackbarPresenter x:Name="RootSnackbar" Grid.Column="1" VerticalAlignment="Bottom" Margin="0,0,0,50"/>
            </Grid>
        </Grid>
    </Grid>
</ui:FluentWindow>
