<ui:FluentWindow x:Class="VPSFileManager.Views.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Update Available"
        Height="380" Width="500"
        MinHeight="340" MinWidth="460"
        WindowStartupLocation="CenterOwner"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="None"
        Background="{DynamicResource ApplicationBackgroundBrush}"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        ResizeMode="NoResize">

    <Border Padding="28">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                <ui:SymbolIcon Symbol="ArrowDownload24" FontSize="28" Margin="0,0,14,0" Foreground="#22C55E"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="New version available!" FontSize="18" FontWeight="Bold"/>
                    <TextBlock x:Name="VersionText" FontSize="12" Opacity="0.6" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Release Notes -->
            <TextBlock Grid.Row="1" Text="Release Notes" FontSize="13" FontWeight="SemiBold" Opacity="0.7" Margin="0,0,0,6"/>

            <Border Grid.Row="2" Background="#0AFFFFFF" CornerRadius="8" Padding="14" Margin="0,0,0,16">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="140">
                    <TextBlock x:Name="ChangelogText" TextWrapping="Wrap" FontSize="12" Opacity="0.8"
                               LineHeight="20"/>
                </ScrollViewer>
            </Border>

            <!-- Download Progress (hidden initially) -->
            <StackPanel Grid.Row="3" x:Name="ProgressPanel" Visibility="Collapsed" Margin="0,0,0,16">
                <Grid Margin="0,0,0,6">
                    <TextBlock x:Name="ProgressStatusText" Text="Downloading..." FontSize="12" Opacity="0.7"/>
                    <TextBlock x:Name="ProgressPercentText" Text="0%" FontSize="12" FontWeight="SemiBold"
                               HorizontalAlignment="Right" Opacity="0.7"/>
                </Grid>
                <ProgressBar x:Name="DownloadProgress" Height="6" Minimum="0" Maximum="100" Value="0"
                             Foreground="#22C55E"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:Button x:Name="CancelButton" Content="Later" Appearance="Transparent"
                           Padding="24,8" Click="Cancel_Click" MinWidth="100" Margin="0,0,8,0"/>
                <ui:Button x:Name="UpdateButton" Content="Update &amp; Restart" Appearance="Primary"
                           Padding="24,8" Click="Update_Click" MinWidth="140"
                           Icon="{ui:SymbolIcon ArrowDownload24}"/>
            </StackPanel>
        </Grid>
    </Border>
</ui:FluentWindow>
