<ui:FluentWindow x:Class="VPSFileManager.Views.TasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:VPSFileManager.ViewModels"
        mc:Ignorable="d"
        Title="Tasks"
        Height="700" Width="1000"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterOwner"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="None"
        Background="{DynamicResource ApplicationBackgroundBrush}"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Title="Tasks - Command Terminal" Grid.Row="0"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- TASKS SIDEBAR -->
            <Border Background="{DynamicResource CardBackgroundBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,0,1,0"
                    Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="Available Tasks" FontSize="13" FontWeight="Bold" Margin="0,0,0,8"/>

                    <!-- Sudo Toggle -->
                    <Border Grid.Row="0" Margin="0,24,0,8" Padding="8,6" CornerRadius="4"
                            Background="{DynamicResource ControlFillColorDefaultBrush}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ui:SymbolIcon Grid.Column="0" Symbol="ShieldKeyhole24" FontSize="16"
                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1" Text="Usar sudo" FontSize="12"
                                       VerticalAlignment="Center"/>
                            <CheckBox Grid.Column="2" IsChecked="{Binding UseSudo}"
                                      VerticalAlignment="Center" Margin="0"/>
                        </Grid>
                    </Border>

                    <!-- Tasks List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Tasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ui:Button Margin="0,0,0,6" Padding="12,10" HorizontalAlignment="Stretch"
                                               HorizontalContentAlignment="Left" Appearance="Transparent"
                                               Background="{DynamicResource ControlFillColorDefaultBrush}"
                                               Command="{Binding DataContext.SelectTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                               CommandParameter="{Binding}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="12"/>
                                            <TextBlock Text="{Binding Description}" FontSize="9" Opacity="0.5"
                                                       TextWrapping="Wrap" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </ui:Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Close Button -->
                    <ui:Button Grid.Row="2" Content="Close" Appearance="Secondary"
                               HorizontalAlignment="Stretch" Margin="0,8,0,0"
                               Click="Close_Click"/>
                </Grid>
            </Border>

            <!-- TERMINAL AREA -->
            <Border Grid.Column="1" Background="{DynamicResource ApplicationBackgroundBrush}">
                <Border Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Task Info Panel -->
                    <Border Grid.Row="0" Background="{DynamicResource ControlFillColorDefaultBrush}"
                            Padding="12" CornerRadius="6" Margin="0,0,0,12"
                            Visibility="{Binding SelectedTask, Converter={StaticResource ObjectToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="{Binding SelectedTask.Name}" FontSize="14" FontWeight="Bold" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding SelectedTask.Description}" FontSize="11" Opacity="0.6"
                                       TextWrapping="Wrap" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding SelectedTask.Command}" FontSize="10" FontFamily="Courier New"
                                       Opacity="0.4" TextWrapping="Wrap" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Options Selection -->
                    <Border Grid.Row="1" Background="{DynamicResource ControlFillColorDefaultBrush}"
                            Padding="12" CornerRadius="6" Margin="0,0,0,12"
                            Visibility="{Binding SelectedTask.RequiresSelection, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="Select Option" FontSize="11" FontWeight="Bold" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding SelectedTask.AvailableOptions}"
                                      SelectedItem="{Binding SelectedTask.SelectedOption}"
                                      Margin="0,0,0,8" Padding="8,6" Height="32"/>
                            <ui:Button Content="Load Options" Command="{Binding LoadTaskOptionsCommand}"
                                       Appearance="Secondary" HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>

                    <!-- Terminal Output -->
                    <Border Grid.Row="2" Background="#1E1E1E" CornerRadius="6" Padding="12" Margin="0,0,0,12">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding TaskOutput}"
                                       FontFamily="Courier New" FontSize="11"
                                       Opacity="0.9" TextWrapping="Wrap"
                                       Foreground="#D4D4D4"
                                       Padding="8"
                                       LineHeight="1.5"/>
                        </ScrollViewer>
                    </Border>

                    <!-- Empty State -->
                    <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding SelectedTask, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <ui:SymbolIcon Symbol="Play24" FontSize="64" Opacity="0.1" HorizontalAlignment="Center"/>
                        <TextBlock Text="Select a task from the left" Opacity="0.3"
                                   HorizontalAlignment="Center" Margin="0,16,0,0" FontSize="13"/>
                    </StackPanel>

                    <!-- Controls -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal">
                        <ui:Button Content="Execute" Appearance="Success" Padding="20,8"
                                   Command="{Binding ExecuteTaskCommand}"
                                   IsEnabled="{Binding IsExecuting, Converter={StaticResource InverseBooleanConverter}}"
                                   Margin="0,0,8,0"/>
                        <ui:Button Content="Clear Output" Appearance="Secondary" Padding="20,8"
                                   Command="{Binding ClearOutputCommand}"
                                   Margin="0,0,8,0"/>
                        <ui:ProgressRing IsIndeterminate="True" Width="24" Height="24" Margin="12,0,0,0"
                                         Visibility="{Binding IsExecuting, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Grid>
                </Border>
            </Border>
        </Grid>
    </Grid>
</ui:FluentWindow>
