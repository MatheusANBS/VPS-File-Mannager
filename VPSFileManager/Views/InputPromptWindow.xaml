<ui:FluentWindow x:Class="VPSFileManager.Views.InputPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Input"
        Height="240" Width="450"
        MinHeight="240" MinWidth="400"
        WindowStartupLocation="CenterOwner"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="None"
        Background="{DynamicResource ApplicationBackgroundBrush}"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        ResizeMode="NoResize">

    <Border Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock x:Name="TitleText" Grid.Row="0" Text="Input Required" FontSize="18" FontWeight="Bold" Margin="0,0,0,4"/>
            <TextBlock x:Name="MessageText" Grid.Row="1" Text="Please enter a value" FontSize="12" Opacity="0.6" Margin="0,0,0,20"/>

            <!-- Input -->
            <StackPanel Grid.Row="2" Margin="0,0,0,12">
                <TextBlock x:Name="LabelText" Text="Value" FontSize="11" FontWeight="Medium" Margin="0,0,0,6"/>
                <ui:TextBox x:Name="InputTextBox" Padding="12,8" Height="36" KeyDown="InputTextBox_KeyDown"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                <ui:Button Content="Cancel" Appearance="Transparent" Padding="24,8" Click="Cancel_Click" MinWidth="100" Margin="0,0,8,0"/>
                <ui:Button Content="OK" Appearance="Primary" Padding="24,8" Click="OK_Click" MinWidth="100"/>
            </StackPanel>
        </Grid>
    </Border>
</ui:FluentWindow>
