            </StackPanel>
        </Border>

        <!-- ConteÃºdo scrollÃ¡vel -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20,0">
            <StackPanel x:Name="ShortcutsPanel">

                <!-- FILE -->
                <TextBlock Text="ðŸ“  File" Style="{StaticResource SectionHeader}"/>
                <!-- Ctrl+S -->
                <Grid Style="{StaticResource ShortcutRow}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Border Style="{StaticResource KeyBadge}"><TextBlock Text="Ctrl" Style="{StaticResource KeyText}"/></Border>
                        <TextBlock Text=" + " Foreground="#666" VerticalAlignment="Center" FontSize="11"/>
                        <Border Style="{StaticResource KeyBadge}"><TextBlock Text="S" Style="{StaticResource KeyText}"/></Border>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="Save file" Style="{StaticResource ShortcutDesc}"/>
                </Grid>
                <!-- Ctrl+W -->
                <Grid Style="{StaticResource ShortcutRow}">
