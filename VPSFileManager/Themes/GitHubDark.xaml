<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- GitHub Dark Theme Colors -->
    <Color x:Key="ApplicationBackgroundColor">#0D1117</Color>
    <Color x:Key="CardBackgroundColor">#161B22</Color>
    <Color x:Key="TextPrimaryColor">#E6EDF3</Color>
    <Color x:Key="TextSecondaryColor">#8B949E</Color>
    <Color x:Key="AccentColor">#238636</Color>
    <Color x:Key="AccentSecondaryColor">#58A6FF</Color>
    <Color x:Key="ControlStrongColor">#21262D</Color>
    <Color x:Key="LayerColor">#161B22</Color>
    <Color x:Key="BorderColor">#30363D</Color>
    <Color x:Key="HoverColor">#1F242C</Color>
    <Color x:Key="SelectionColor">#1F242C</Color>
    <Color x:Key="TransparentColor">#00000000</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="ApplicationBackgroundBrush" Color="{StaticResource ApplicationBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="AccentFillColorDefaultBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="SystemAccentColorPrimaryBrush" Color="{StaticResource AccentSecondaryColor}"/>
    <SolidColorBrush x:Key="ControlStrongFillColorDefaultBrush" Color="{StaticResource ControlStrongColor}"/>
    <SolidColorBrush x:Key="LayerFillColorDefaultBrush" Color="{StaticResource LayerColor}"/>
    <SolidColorBrush x:Key="CardStrokeColorDefaultBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="ControlFillColorDefaultBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="SelectionBackgroundBrush" Color="{StaticResource SelectionColor}"/>
    <SolidColorBrush x:Key="TransparentBrush" Color="{StaticResource TransparentColor}"/>

    <!-- Status Brushes -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#3FB950"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#D29922"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F85149"/>

</ResourceDictionary>
